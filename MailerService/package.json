{
    "name": "MailerService",
    "version": "1.1.1",
    "description": "Backend of TFG Project using nestjs",
    "author": "Arturo Alca√±iz",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "ts-node --files src/main",
        "clean": "rm -Rf ./dist/",
        "build:ci": "npm run build",
        "build": "npm run clean && mkdir ./dist && tsc --project tsconfig.build.json",
        "prettier": "prettier --write {,*/**/}*.{ts,js,jsx,json}",
        "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && npx jest --runInBand --color --reporters=default --no-cache --coverage=false --silent=false",
        "lint": "npx eslint -c .eslintrc.js --ext .ts './src/**/*.ts' './tests/**/*.ts' --no-error-on-unmatched-pattern"
    },
    "dependencies": {
        "@nestjs/common": "^9.1.6",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.1.6",
        "@nestjs/microservices": "^9.1.6",
        "@nestjs/platform-express": "^9.1.6",
        "@nestjs/swagger": "^6.1.3",
        "@nestjs/throttler": "^3.1.0",
        "@nestjs/websockets": "^9.1.6",
        "@types/multer-s3": "^3.0.0",
        "@typescript-eslint/parser": "^5.42.0",
        "cache-manager": "^5.1.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.18.2",
        "handlebars": "^4.7.7",
        "nest-winston": "^1.8.0",
        "nodemailer": "^6.8.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.7",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@darraghor/eslint-plugin-nestjs-typed": "^3.15.1",
        "@nestjs/testing": "^9.1.6",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.14",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.9",
        "@types/nodemailer": "^6.4.6",
        "@types/passport-jwt": "^3.0.7",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^8.3.4",
        "prettier": "^2.7.1",
        "supertest": "^6.3.1",
        "ts-jest": "29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "overrides": {
        "@nestjs/platform-express": {
            "multer": "^1.4.5-lts.1"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
