{
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "incremental": true,
        "types": ["node"],
        "moduleResolution": "node",
        "typeRoots": ["./node_module/@types", "./src/types"],
        "preserveConstEnums": true
    }
}